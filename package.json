{
  "name": "wedding-plan",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.0",
    "@mui/lab": "^7.0.0-beta.12",
    "@mui/material": "^7.1.0",
    "@mui/system": "^7.1.0",
    "@mui/x-date-pickers": "^8.3.1",
    "@tanstack/react-query": "^5.75.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/uuid": "^10.0.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "firebase": "^11.3.1",
    "mui": "^0.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.2.0",
    "react-scripts": "5.0.1",
    "stylis-plugin-rtl": "^2.1.1",
    "twilio": "^5.7.3",
    "typescript": "^4.9.5",
    "uuid": "^11.1.0",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "enulate": "firebase emulators:start --only functions --inspect-functions",
    "watch": "cd ./functions && tsc --watch",
    "build:dev": "env-cmd -f .env.development react-scripts build",
    "build:prod": "env-cmd -f .env.production react-scripts build",
    "eject": "react-scripts eject",
    "deploy:dev": "npm run build:dev && firebase use wedding-c89a1 && firebase deploy --only hosting:development",
    "deploy:prod": "npm run build:prod && firebase use wedding-prod-f13a0 && firebase deploy --only hosting:production -P production",
    "deploy:functions:prod": "cd ./functions && npm run build && firebase use wedding-prod-f13a0 && firebase deploy --only functions",
    "migrate-wedding": "node migrateWedding.cjs",
    "deploy:prod:both": "npm run build:prod && cd functions && npm run prebuild && cd .. && firebase deploy --only hosting:production,functions -P production",
    "deploy:dev:both": "npm run build:dev && cd functions && npm run prebuild && cd .. && firebase use wedding-c89a1 && firebase deploy --only hosting:development,functions -P development"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/stylis": "^4.2.7",
    "env-cmd": "^10.1.0",
    "ts-node": "^10.9.2"
  }
}
