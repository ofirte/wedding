{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "paths": {
      "@wedding-plan/types": ["../shared"],
      "@wedding-plan/types/*": ["../shared/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src", "../shared/**/*"]
}
